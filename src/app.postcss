/* Write your global styles here, in PostCSS syntax */
@tailwind base;
@tailwind components;
@tailwind utilities;

body {
    @apply text-black;
}

h1 {
    @apply text-3xl;
    @apply font-black;
    @apply uppercase;
}

h2 {
    @apply text-2xl;
    @apply font-black;
}

h3 {
    @apply text-xl;
    @apply font-extrabold;
}

h4 {
    @apply text-lg;
    @apply font-medium;
    @apply text-gray;
}